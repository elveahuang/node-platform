{
    "name": "node-platform-root",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "lint": "eslint './packages/**/src/**/*.{ts,tsx,js,jsx,vue}'",
        "lint:fix": "eslint './packages/**/src/**/*.{ts,tsx,js,jsx,vue}' --fix",
        "prettier": "prettier --write './**/*.{ts,tsx,js,jsx,json,scss,css,vue}'",
        "start:server": "pnpm run start --w @platform/server",
        "start:server:prod": "cd ./packages/server && node dist/main",
        "build:server": "cd ./packages/server && pnpm run build",
        "start:vue:webapp": "cd packages/www-vue/webapp && pnpm run start",
        "build:vue:webapp": "cd packages/www-vue/webapp && pnpm run build",
        "start:react:webapp": "cd packages/www-react/webapp && pnpm run start",
        "build:react:webapp": "cd packages/www-react/webapp && pnpm run build"
    },
    "workspaces": [
        "packages/**"
    ],
    "dependencies": {
        "core-js": "^3.21.1",
        "crypto-js": "^4.1.1",
        "dayjs": "^1.11.0",
        "jsonwebtoken": "^8.5.1",
        "localforage": "^1.10.0",
        "lodash": "^4.17.21",
        "uuid": "^8.3.2",
        "validator": "^13.7.0"
    },
    "devDependencies": {
        "@babel/core": "^7.17.8",
        "@babel/eslint-parser": "^7.17.0",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-typescript": "^7.16.7",
        "@types/crypto-js": "^4.1.1",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/lodash": "^4.14.180",
        "@types/node": "^17.0.21",
        "@types/qs": "^6.9.7",
        "@types/validator": "^13.7.1",
        "@typescript-eslint/eslint-plugin": "^5.15.0",
        "@typescript-eslint/parser": "^5.15.0",
        "@vue/eslint-config-prettier": "^7.0.0",
        "@vue/eslint-config-typescript": "^10.0.0",
        "eslint": "^8.11.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-taro": "^3.4.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-vue": "^8.5.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.7",
        "path": "^0.12.7",
        "prettier": "^2.6.0",
        "typescript": "^4.6.2"
    }
}
